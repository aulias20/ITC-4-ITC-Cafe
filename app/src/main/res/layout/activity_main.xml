<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITC Cafe!"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:textStyle="bold|italic" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6EAAC5"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/imgcharger"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="14dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgcharger" />
                <TextView
                    android:id="@+id/txtcharger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charger OPPO"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/imgcharger"
                    android:minLines="2"
                    android:maxLines="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtdes1"
                    android:layout_below="@+id/txtcharger"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/imgcharger"
                    android:minLines="4"
                    android:maxLines="4"
                    android:text="Charger original OPPO unsealed. Garansi 1 bulan."
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/txtharga1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 100.000"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/imgcharger"
                    android:minLines="2"
                    android:maxLines="2"
                    android:layout_below="@+id/txtdes1"/>
                <Button
                    android:id="@+id/btntambahcharger"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/txtjumlahcharger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="12dp"
                    android:text="0"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/btntambahcharger"
                    android:paddingBottom="8dp"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnkurangcharger"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txtjumlahcharger"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#6EAAC5"
                android:padding="13dp">
                <ImageView
                    android:id="@+id/imgamouse"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="14dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgalasmouse" />
                <TextView
                    android:id="@+id/txtamouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alas Mouse"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/imgamouse"
                    android:minLines="2"
                    android:maxLines="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtdes2"
                    android:layout_below="@+id/txtamouse"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/imgamouse"
                    android:minLines="4"
                    android:maxLines="4"
                    android:text="Alas mouse motif keramik. Tersedia 2 warna: oranye dan silver. Tidak bisa memilih motif."
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/txtharga2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 24.500"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/imgamouse"
                    android:minLines="2"
                    android:maxLines="2"
                    android:layout_below="@+id/txtdes2"/>
                <Button
                    android:id="@+id/btntambahamouse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:id="@+id/txtjumlahamouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/btntambahamouse"
                    android:text="0"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:layout_marginHorizontal="12dp" />
                <Button
                    android:id="@+id/btnkurangamouse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txtjumlahamouse"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/vg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#6EAAC5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txttotalharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Rp 0"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/txtpurchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnbeli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buy"
            android:layout_marginRight="4dp"/>
        <Button
            android:id="@+id/btnreset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="Reset"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>